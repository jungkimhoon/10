package swing;

import java.awt.Button;
import java.awt.Color;
import java.awt.Container;
import java.awt.FlowLayout;
import java.awt.Graphics;
import java.awt.Panel;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;
import java.text.SimpleDateFormat;
import java.util.Date;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class Timer2 extends JFrame implements ActionListener, Runnable{
	private JButton startB, stopB;
	private JLabel lb;
	private static int i = 0;
	private int bt;
	
	public Timer2() {
		
	
		startB = new JButton("시작");
		stopB = new JButton("중단");
		lb = new JLabel("",JLabel.CENTER);
		
		startB.setBounds(70, 130, 60, 30);
		stopB.setBounds(150, 130, 60, 30);
		lb.setBounds(100, 120, 100, 40);
		setBackground(Color.WHITE);
	
		add(startB);
		add(stopB);
		add(lb);
		
		lb.setText("여기");
		lb.getText();
		
		startB.addActionListener(this);
		stopB.addActionListener(this);
		
	
		setTitle("으음");
		setBounds(700, 300, 300, 200);
		setVisible(true);
		
		Thread t = new Thread(this);
		t.start();
		
		
	}
	
	@Override
	public void actionPerformed(ActionEvent e) {
		// TODO Auto-generated method stub
	
		if(e.getSource() == startB) {
			bt = 1;
			
		}
		if(e.getSource() == stopB) {
			bt = 0;
		}
		
	}
	

	public static void main(String[] args) {
		new Timer2();
	}

	@Override
	public void run() {
		while(true) {
			
			if(bt == 1) { 
				if(i == 20) {
					i = 0;
					bt = 0;
					break;
				}
				i++;
				lb.setText(i+"");
				lb.getText();
				repaint();
				
			} else if(bt == 0) {
				
				i = 0;
			}
			try {
				Thread.sleep(100);
			}catch(InterruptedException e) {
				e.printStackTrace();
			}
		}
		
	}


}
