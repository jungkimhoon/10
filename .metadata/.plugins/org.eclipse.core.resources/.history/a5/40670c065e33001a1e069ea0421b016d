package swing;

import javax.swing.JFrame;
import javax.swing.JScrollPane;
import javax.swing.table.AbstractTableModel;

public class JTable extends AbstractTableModel{
	Object[][] data = {{"Nari","마루치",new Integer(1234),"옆집친구"},
			{"One","오윤아",new Integer(1111),"예쁜이"},
			{"two","오윤서",new Integer(2222),"귀염둥이"},
			{"three","아라치",new Integer(3333), "동아리친구"}};
	String[] name = {"아이디","이름","비밀번호","구분"};
	



	@Override
	public int getColumnCount() {
		// TODO Auto-generated method stub
		return name.length;
	}

	@Override
	public int getRowCount() {
		// TODO Auto-generated method stub
		return data.length;
	}

	@Override
	public Object getValueAt(int r, int c) {
		// TODO Auto-generated method stub
		return data[r][c];
	}
	@Override
	public boolean isCellEditable(int r, int c) {
		// TODO Auto-generated method stub
		return (c!=0) ? true : false;
	}
	
	@Override
	public String getColumnName(int c) {
		// TODO Auto-generated method stub
		return name[c];
	}
	
	@Override
	public void setValueAt(Object aValue, int rowIndex, int columnIndex) {
		// TODO Auto-generated method stub
		data[rowIndex][columnIndex] = aValue;
	}
}


